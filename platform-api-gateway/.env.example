# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Downstream Microservice Subgraph URLs
# These should point to the endpoints exposing the subgraph schemas
SUBGRAPH_IDENTITY_URL=http://localhost:4001/graphql
SUBGRAPH_PROFILE_URL=http://localhost:4002/graphql
SUBGRAPH_CONNECTION_URL=http://localhost:4003/graphql
SUBGRAPH_POST_URL=http://localhost:4004/graphql
SUBGRAPH_MESSAGING_URL=http://localhost:4005/graphql
SUBGRAPH_SEARCH_URL=http://localhost:4006/graphql

# Security - Authorizer Lambda ARN
# Replace with the actual ARN of the Identity Service's authorizer function for each stage
AUTHORIZER_LAMBDA_ARN_DEV=arn:aws:lambda:us-east-1:123456789012:function:identity-service-dev-authorizer
AUTHORIZER_LAMBDA_ARN_PROD=arn:aws:lambda:us-east-1:123456789012:function:identity-service-prod-authorizer

# Caching Configuration
# Endpoint for the shared Redis (ElastiCache) instance
REDIS_HOST=localhost
REDIS_PORT=6379

# Observability - OpenTelemetry Collector Endpoint
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Domain Management for Serverless Domain Manager
# Replace with your actual domain details
CUSTOM_DOMAIN_NAME_DEV=api.dev.platform.com
CUSTOM_DOMAIN_NAME_PROD=api.platform.com
HOSTED_ZONE_NAME=platform.com

# API Gateway Throttling Configuration
THROTTLE_RATE_LIMIT=100
THROTTLE_BURST_LIMIT=200