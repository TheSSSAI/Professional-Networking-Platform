# Environment variables for local development
# Copy this file to .env and fill in the values

NODE_ENV=development

# Application Port (gRPC)
PORT=50053

# OpenSearch Configuration
OPENSEARCH_NODE=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_NAME=user_profiles

# AWS Configuration (for local SQS, e.g., with LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SQS_QUEUE_URL=http://localhost:4566/000000000000/search-profile-updated-queue
# Set endpoint for LocalStack if used
AWS_ENDPOINT_URL=http://localhost:4566

# gRPC Client URLs
GRPC_PROFILE_SERVICE_URL=localhost:50051
GRPC_CONNECTIONS_SERVICE_URL=localhost:50052

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379