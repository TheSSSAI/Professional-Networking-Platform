# Environment variables template for the application

NODE_ENV=development

# Application Port for gRPC server
PORT=50053

# OpenSearch Configuration
OPENSEARCH_NODE=http://opensearch-node:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_NAME=user_profiles

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SQS_QUEUE_URL=
AWS_ENDPOINT_URL= # Optional: for local development with LocalStack

# gRPC Client URLs for inter-service communication
GRPC_PROFILE_SERVICE_URL=platform-service-profile:50051
GRPC_CONNECTIONS_SERVICE_URL=platform-service-connections:50052

# Redis Cache Configuration
REDIS_HOST=redis
REDIS_PORT=6379