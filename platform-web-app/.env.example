# Environment variables for the Platform Web App
# Rename this file to .env.local for local development

# The public-facing URL for the API Gateway's GraphQL endpoint
# Example: http://localhost:3000/graphql
NEXT_PUBLIC_GRAPHQL_ENDPOINT="http://localhost:3000/graphql"

# The public-facing URL for the WebSocket server
# Example: http://localhost:3001
NEXT_PUBLIC_WEBSOCKET_URL="http://localhost:3001"

# The base URL for the web application itself. Used for constructing absolute URLs.
# Example: http://localhost:3002
NEXT_PUBLIC_APP_BASE_URL="http://localhost:3002"