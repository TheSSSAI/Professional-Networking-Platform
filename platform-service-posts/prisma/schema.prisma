datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id          String      @id @default(uuid())
  authorId    String
  text        String?     @db.Text
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  linkPreview Json?
  media       PostMedia[]

  @@index([authorId])
  @@map("posts")
}

model PostMedia {
  id          String @id @default(uuid())
  s3ObjectKey String @unique
  mediaType   String
  order       Int
  post        Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId      String

  @@index([postId])
  @@map("post_media")
}