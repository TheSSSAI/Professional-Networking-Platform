# Application Configuration
NODE_ENV=development
PORT=50052

# PostgreSQL Database Connection (Prisma)
# Example: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://platform_user:platform_password@postgres:5432/platform_posts_db?schema=public"

# AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS S3 Configuration for Post Media
S3_BUCKET_NAME=platform-posts-media
CDN_BASE_URL=https://cdn.yourdomain.com

# AWS SNS Configuration for Events
SNS_TOPIC_ARN_PLATFORM_EVENTS=arn:aws:sns:us-east-1:000000000000:PlatformEvents

# gRPC Service URLs
# These should point to the Kubernetes service names in production
PROFILE_SERVICE_GRPC_URL=localhost:50053
CONNECTION_SERVICE_GRPC_URL=localhost:50054