# Application
NODE_ENV=development
PORT=50053

# PostgreSQL Database
DATABASE_URL="postgresql://user:password@localhost:5432/engagementdb?schema=public"

# gRPC Service Dependencies
# Example URLs for dependent microservices
CONNECTIONS_SERVICE_URL=localhost:50054
POSTS_SERVICE_URL=localhost:50052
PROFILE_SERVICE_URL=localhost:50051

# AWS Event Bus (SNS/SQS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SNS Topic ARNs
POST_REACTED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:PostReactedTopic
COMMENT_ADDED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:CommentAddedTopic
SKILL_ENDORSED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:SkillEndorsedTopic

# Observability (OpenTelemetry)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=platform-service-engagement