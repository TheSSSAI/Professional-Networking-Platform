{
  "name": "platform-service-admin",
  "version": "1.0.0",
  "description": "Administrative microservice for content moderation, user management, and system configuration.",
  "author": "Platform Engineering",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "proto:install": "npm i git+https://github.com/your-org/platform-lib-contracts.git",
    "proto:admin:generate": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/gen/admin --ts_proto_opt=nestJs=true,addGrpcMetadata=true,useOptionals=messages proto/admin.proto",
    "proto:identity:generate": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/gen/identity --ts_proto_opt=nestJs=true,addGrpcMetadata=true,useOptionals=messages node_modules/platform-lib-contracts/identity/identity.proto",
    "proto:posts:generate": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/gen/posts --ts_proto_opt=nestJs=true,addGrpcMetadata=true,useOptionals=messages node_modules/platform-lib-contracts/posts/posts.proto",
    "proto:generate": "npm run proto:admin:generate && npm run proto:identity:generate && npm run proto:posts:generate"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.1",
    "@grpc/proto-loader": "^0.7.10",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.3.3",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/microservices": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@prisma/client": "^5.10.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "joi": "^17.12.2",
    "nestjs-pino": "^4.0.0",
    "pino-http": "^9.0.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-proto": "^1.167.9",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}