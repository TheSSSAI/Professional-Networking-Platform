{
  "name": "@platform/contracts",
  "version": "1.0.0",
  "description": "Shared data contracts and communication interfaces for the Platform ecosystem.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/grpc",
    "src/graphql"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:grpc && npm run build:graphql && tsc -p tsconfig.build.json",
    "build:grpc": "buf generate",
    "build:graphql": "graphql-codegen --config codegen.ts",
    "clean": "rimraf dist src/grpc/v1/ts src/graphql/generated",
    "lint": "npm run lint:ts && npm run lint:grpc && npm run lint:graphql && npm run format:check",
    "lint:ts": "eslint \"src/**/*.ts\" --fix",
    "lint:grpc": "buf lint",
    "lint:graphql": "graphql-schema-linter src/graphql/schema.graphql",
    "format": "prettier --write \"src/**/*.ts\" \"**/*.json\" \"**/*.md\" \"**/*.graphql\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"**/*.json\" \"**/*.md\" \"**/*.graphql\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/platform-contracts.git"
  },
  "author": "Platform Engineering",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-mappers": "^3.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.0",
    "@semantic-release/npm": "^12.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "bufbuild/buf": "^1.35.1-1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "graphql": "^16.8.2",
    "graphql-schema-linter": "^3.1.0",
    "jest": "^29.7.0",
    "long": "^5.2.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "dependencies": {}
}