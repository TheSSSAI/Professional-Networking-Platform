# Application Configuration
NODE_ENV=development
PORT=3004
# Note: For production, use a secrets manager.
JWT_SECRET=a-very-strong-and-long-secret-for-jwt-token-generation

# Database (PostgreSQL via Prisma)
# Example: postgresql://user:password@hostname:port/database_name
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/platform_notifications?schema=public"

# Cache (Redis)
# Example: redis://:password@hostname:port/db_number
REDIS_URL="redis://localhost:6379/1"

# Microservice Communication (gRPC)
# URL for the User Profile service, which holds user preferences
USER_PROFILE_SERVICE_GRPC_URL="localhost:50051"

# AWS Configuration (for SQS event consumption)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
NOTIFICATIONS_SQS_QUEUE_URL="your-sqs-queue-url-for-notifications"