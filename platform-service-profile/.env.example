# Service Configuration
NODE_ENV=development
PORT=50051

# Database (PostgreSQL via Prisma)
# Example: postgresql://user:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/platform_profile?schema=public"

# Cache (Redis)
# Example: redis://host:port
REDIS_URL="redis://localhost:6379"

# AWS Credentials & Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_SESSION_TOKEN="" # Optional, for temporary credentials

# AWS Services
# ARN for the SNS Topic to which UserProfileUpdated events are published
SNS_TOPIC_ARN_PROFILE_UPDATED="arn:aws:sns:us-east-1:000000000000:profile-events"

# S3 Configuration for Media Uploads
S3_BUCKET_NAME="platform-profile-media-bucket"
S3_PRESIGNED_URL_EXPIRATION_SECONDS=300

# Inter-service Communication (gRPC client endpoints)
# This service is a server, but it's good practice to list client connections it might make.
# Example: CONNECTION_SERVICE_GRPC_URL=localhost:50052
CONNECTION_SERVICE_GRPC_URL=localhost:50052