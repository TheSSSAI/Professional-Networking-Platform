{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": { "list": [] },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Request Rate",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m]))",
          "legendFormat": "Total RPS",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    },
    {
      "title": "Error Rate (5xx %)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"kubernetes-pods\", service=~\"api-gateway.*\", status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) * 100",
          "legendFormat": "5xx Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "title": "P99/P95/P50 Latency",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "id": 3,
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) by (le))",
          "legendFormat": "P99 Latency",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) by (le))",
          "legendFormat": "P95 Latency",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) by (le))",
          "legendFormat": "P50 Latency",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "Request Latency Heatmap",
      "type": "heatmap",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "id": 4,
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_bucket{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) by (le)",
          "legendFormat": "{{le}}",
          "format": "heatmap"
        }
      ],
      "options": {
        "calculate": false,
        "yAxis": { "format": "s" }
      }
    },
    {
      "title": "Requests by Status Code",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "id": 5,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"kubernetes-pods\", service=~\"api-gateway.*\"}[5m])) by (status_code)",
          "legendFormat": "{{status_code}}",
          "refId": "A"
        }
      ],
      "options": { "stacking": { "mode": "normal" } },
      "fieldConfig": { "defaults": { "unit": "reqps" } }
    }
  ],
  "refresh": "1m",
  "schemaVersion": 30,
  "style": "dark",
  "tags": ["platform", "api-gateway", "performance"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "API Gateway Performance",
  "uid": "api-gateway-performance",
  "version": 1
}