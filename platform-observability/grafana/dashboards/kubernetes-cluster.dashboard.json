{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": { "list": [] },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Cluster CPU Usage",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total[5m])) / sum(machine_cpu_cores) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "text": { "valueSize": 40 },
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Cluster Memory Usage",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "id": 2,
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes) / sum(machine_memory_bytes) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "text": { "valueSize": 40 },
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    },
    {
      "title": "Node Count",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "id": 3,
      "targets": [
        { "expr": "count(kube_node_info)", "refId": "A" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "text": { "valueSize": 40 },
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": { "defaults": { "unit": "", "decimals": 0 } }
    },
    {
      "title": "Pod Status",
      "type": "piechart",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 6 },
      "id": 4,
      "targets": [
        {
          "expr": "sum by (phase) (kube_pod_status_phase)",
          "legendFormat": "{{phase}}",
          "refId": "A"
        }
      ],
      "options": { "displayLabels": ["name", "percent"], "pieType": "donut" }
    },
    {
      "title": "CPU Usage per Node",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 6 },
      "id": 5,
      "targets": [
        {
          "expr": "sum by (node) (rate(container_cpu_usage_seconds_total{id=\"/\"}[5m])) * 100",
          "legendFormat": "{{node}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "title": "Memory Usage per Node",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 16 },
      "id": 6,
      "targets": [
        {
          "expr": "(1 - (sum by (node) (node_memory_MemAvailable_bytes) / sum by (node) (node_memory_MemTotal_bytes))) * 100",
          "legendFormat": "{{node}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "title": "Pods per Node",
      "type": "barchart",
      "datasource": "Prometheus",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 16 },
      "id": 7,
      "targets": [
        {
          "expr": "sum by (node) (kube_pod_info)",
          "legendFormat": "{{node}}",
          "refId": "A"
        }
      ],
      "options": { "orientation": "horizontal" }
    }
  ],
  "refresh": "1m",
  "schemaVersion": 30,
  "style": "dark",
  "tags": ["kubernetes", "cluster", "infrastructure"],
  "templating": { "list": [] },
  "time": { "from": "now-3h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Kubernetes Cluster Health",
  "uid": "kubernetes-cluster-health",
  "version": 1
}