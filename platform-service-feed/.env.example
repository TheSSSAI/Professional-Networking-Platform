# APP CONFIGURATION
# The port on which the Feed Service gRPC server will listen.
APP_PORT=50052

# REDIS CONFIGURATION
# The connection URL for the Redis instance (e.g., redis://:password@host:port/db)
REDIS_URL=redis://localhost:6379/0
# The maximum number of post IDs to store in each user's feed sorted set.
FEED_MAX_SIZE=1000

# AWS CONFIGURATION
# The AWS region for SQS and other AWS services.
AWS_REGION=us-east-1
# The URL of the SQS queue to consume "PostCreated" events from.
SQS_QUEUE_URL=http://localhost:4566/000000000000/feed-generation-queue
# In local development, you may need to set AWS credentials for localstack/aws-cli
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test

# SERVICES CONFIGURATION
# The gRPC URL for the Connections Service.
CONNECTIONS_GRPC_URL=localhost:50053